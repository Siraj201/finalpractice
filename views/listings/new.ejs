<%- layout("layouts/boilerplate.ejs") %>

  <div class="container mt-5">
    <form action="/listings/new" method="post" class="needs-validation" novalidate >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="listing[title]" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" id="description" name="listing[description]" class="form-control" required>
        <div class="valid-feedback">Description looks good!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input type="text" id="image" name="listing[image]" class="form-control" required>
        <div class="valid-feedback">Image URL looks good!</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" id="price" name="listing[price]" class="form-control" required>
        <div class="valid-feedback">Price looks fair!</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" id="country" name="listing[country]" class="form-control" required>
        <div class="valid-feedback">Country looks good!</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="listing[location]" class="form-control" required>
        <div class="valid-feedback">location looks good!</div>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">category</label>
       <select name="listing[category]" id="category">
        <option value="mountains">mountains</option>
        <option value="pools">pools</option>
        <option value="castles">castles</option>
        <option value="deserts">desert</option>
        <option value="arctic-region">arctic-region</option>
       </select>
        <div class="valid-feedback">location looks good!</div>
      </div>
      <button class="btn btn-outline-success">create</button>
      </form>
      </div>
        <script>
            (() => {
              'use strict';
              const forms = document.querySelectorAll('.needs-validation');
              Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                  if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              });
            })();
          </script>
          
