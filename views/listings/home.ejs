<%-layout("layouts/boilerplate.ejs") %>
<style>
    .card{
        height: 30rem;
        width: 30rem;
    }
    p{
        margin: 0;
        padding: 0;
    }
</style>

    <div class="row row-cols-lg-3 row-cols-md-2">
<% for(let listing of alllistings) {%>
    <a href="/listings/<%= listing._id %>">
    <div class="card" style="width:25rem; height: 30rem; margin-left: 2rem; margin-top: 2rem;">
        <img src="<%=listing.image %>" class="card-img-top" alt="..." style="height: 14rem; width: 25rem;">
        <div class="card-body">
          <p class="card-title"><%=listing.title %></p>
          <p class="card-text"><%=listing.description %></p>
          <p class="card-text"><%=listing.price %></p>
          <p class="card-text"><%=listing.country %></p>
          <p class="card-text"><%=listing.location %></p>
          <p class="card-text"><%=listing.category %></p>
        <p class="card-text">  owned By:<%=listing.owner.username %></p>
        </div>
      </div>
    </a>
     
    <% } %>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>

